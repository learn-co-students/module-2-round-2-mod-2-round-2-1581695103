<h1>Create Heroine</h1>


<%= form_for @heroine do |f| %>
    <% if @heroine.errors.any? %>
        <h2>There were some errors:</h2>
         <% @heroine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
         <% end %>
        <% end %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %>

    <%= f.collection_select :powers,  Power.all, :id, :name %>
    <%= f.submit %>

<% end %>

